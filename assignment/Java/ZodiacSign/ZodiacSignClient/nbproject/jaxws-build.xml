<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.dir}/wsimport/client"/>
        <mkdir dir="${build.generated.dir}/wsimport/binaries"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-check-ZodiacService" depends="wsimport-init">
        <condition property="wsimport-client-ZodiacService.notRequired">
            <available file="${build.generated.dir}/wsimport/client/org/assignment/ZodiacService.java"/>
        </condition>
    </target>
    <target name="wsimport-client-ZodiacService" depends="wsimport-init,wsimport-client-check-ZodiacService" unless="wsimport-client-ZodiacService.notRequired">
        <wsimport sourcedestdir="${build.generated.dir}/wsimport/client" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/ZodiacService/wsdl/localhost_8080/ZodiacSignService/ZodiacService.wsdl" catalog="catalog.xml" extension="true" verbose="true" wsdlLocation="http://localhost:8080/ZodiacSignService/ZodiacService?wsdl" xnocompile="true"/>
    </target>
    <target name="wsimport-client-clean-ZodiacService" depends="-init-project">
        <delete dir="${build.generated.dir}/wsimport/client/org/assignment"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-ZodiacService"/>
    <target name="wsimport-client-compile" depends="-pre-pre-compile">
        <webproject2:javac srcdir="${build.generated.dir}/wsimport/client" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${build.classes.dir}"/>
        <copy todir="${build.classes.dir}">
            <fileset dir="${build.generated.dir}/wsimport/binaries" includes="**/*.xml"/>
        </copy>
    </target>
</project>
